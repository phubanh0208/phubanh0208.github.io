{{> header-home-d}}
<style>
  .left-section {
    border-style: solid;
    align-content: center;
    padding-left: 4em;
    padding-bottom: 4em;
    background-color: #ffffff;

  }
 #additionalInput{
  margin: 0.3em;
  border-style: solid;
  border-radius: 3px;
 }
 p{
  font-weight: bold;
 }
</style>
<main class="">
  <form id="reportForm" class="report-body" action="/home_wardUser/request-lisencing" method="post"
    enctype="multipart/form-data">
    <section class="left-section">
      <!-- Tên -->
      <div class="col-8 d-block">
        <label for="inputName" class="col-0 col-form-label input-title">Tên Công ty</label>
        <input type="text" class="form-control input-place" name="inputName" id="inputName" placeholder="Họ và tên"
          required>
      </div>
      {{!-- Thông tin --}}
      <div class="col-8 d-block">
        <label for="inputNameInfor" class="col-0 col-form-label input-title">Thông tin công ty</label>
        <input type="text" class="form-control input-place" name="inputNameInfor" id="inputNameInfor"
          placeholder="Công ty cho vay vốn" required>
      </div>
      <!-- Email -->
      <div class="col-8 d-block">
        <label for="inputEmail" class="col-0 col-form-label input-title">Email</label>
        <input type="text" class="form-control input-place" name="inputEmail" id="inputEmail" placeholder="Email"
          required>
      </div>

      <!-- Số điện thoại -->
      <div class="col-8 d-block">
        <label for="inputNumber" class="col-0 col-form-label input-title">Số điện thoại</label>
        <input type="text" class="form-control input-place" name="inputNumber" id="inputNumber" placeholder="0907XXXXXX"
          required>
      </div>


      <!-- Nội dung -->
      <div class="col-8 d-block">
        <label for="inputReportInfomation" class="col-0 col-form-label input-title">Nội dung quảng cáo</label>
        <textarea class="form-control input-place" id="textAreaExample" name="inputReportInformation" rows="8"
          required></textarea>
      </div>





    </section>
    <section class="right-section">
      <div class="report-info">
        <div class="card text-center">
          <h3 class="card-title">YÊU CẦU CẤP PHÉP:</h3>
          <div class="card-text-container shadow-lg">
            <h4 class="card-text-title">
              Tên QC: <input type="text" name="NameAd" id="additionalInput">
            </h4>
            <hr>

            <p class="card-text-2" style="text-align:left; padding-left:2em">
              Điểm đặt:
              <td class="table-items status-column">
                <select class="status-dropdown status-column" id="additionalInput" name="location">
                  {{#each locationReports}}
                  <option value="{{_id}}" class="status-column">{{address}}, Phường {{ward}}, Quận {{district}}</option>
                  {{/each}}
                </select>
              </td><br>
              Kích thước: X <input type="number" name="X" id="additionalInput"> <br>
              Kích thước: Y <input type="number" name="Y" id="additionalInput"><br>
              Loại: <input type="text" name="type" id="additionalInput"placeholder="Áp phích"><br>
              Địa chỉ: <input type="text" name="address" id="additionalInput"><br>
              Ngày Đăng Ký: <input type="date" name="dateStar" id="additionalInput"> <br>
              Ngày Kết thúc: <input type="date" name="dayend" id="additionalInput">
            </p>
          </div>

        </div>
        <!-- Hình ảnh (Tối đa 2 file) -->
        <div class="col-8 d-block">
          <label for="inputImage" class="col-0 col-form-label input-title">Hình ảnh (Tối đa 2 file)</label>
          <input type="file" class="form-control-file" id="imageInput" name="images" accept="image/*" multiple required>
          <button id="open-button-outside" class="btn btn-primary open-button" type="submit">
            Báo cáo
          </button>
        </div>
      </div>

    </section>
  </form>
</main>
