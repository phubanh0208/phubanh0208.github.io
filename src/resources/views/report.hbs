{{> header-home}}

<main class="report-body">
  <section class="left-section">
    <form id="reportForm" action="./{{_id}}" method="post" enctype="multipart/form-data">
      <!-- Họ và Tên -->
      <div class="col-8 d-block">
        <label for="inputName" class="col-0 col-form-label input-title">Họ và Tên</label>
        <input type="text" class="form-control input-place" name="inputName" id="inputName" placeholder="Họ và tên"
          required>
      </div>

      <!-- Email -->
      <div class="col-8 d-block">
        <label for="inputEmail" class="col-0 col-form-label input-title">Email</label>
        <input type="text" class="form-control input-place" name="inputEmail" id="inputEmail" placeholder="Email"
          required>
      </div>

      <!-- Số điện thoại -->
      <div class="col-8 d-block">
        <label for="inputNumber" class="col-0 col-form-label input-title">Số điện thoại</label>
        <input type="text" class="form-control input-place" name="inputNumber" id="inputNumber" placeholder="0907XXXXXX"
          required>
      </div>

      <!-- Hình thức báo cáo (Tố giác sai phạm, Đăng ký nội dung, Đóng góp ý kiến, Giải đáp thắc mắc) -->
      <div class="col-8 d-block">
        <label for="inputReportType" class="col-0 col-form-label input-title">Hình thức báo cáo</label>
        <select class="form-control" id="inputReportType" name="inputReportType" required>
          <option value="1">Tố giác sai phạm</option>
          <option value="2">Đăng ký nội dung</option>
          <option value="3">Đóng góp ý kiến</option>
          <option value="4">Giải đáp thắc mắc</option>
        </select>
      </div>

      <!-- Nội dung -->
      <div class="col-8 d-block">
        <label for="inputReportInfomation" class="col-0 col-form-label input-title">Nội dung</label>
        <textarea class="form-control input-place" id="textAreaExample" name="inputReportInformation" rows="5" required></textarea>
      </div>

     <!-- Hình ảnh (Tối đa 2 file) -->
    <div class="col-8 d-block">
        <label for="inputImage" class="col-0 col-form-label input-title">Hình ảnh (Tối đa 2 file)</label>
        <input type="file" class="form-control-file" id="imageInput" name="images" accept="image/*" multiple required>
        <button id="open-button-outside" class="btn btn-primary open-button" type="submit">
            Báo cáo
        </button>
    </div>
    </form>


  </section>
  <section class="right-section">
    <div class="report-info">
      <div class="card text-center">
        <h3 class="card-title">BÁO CÁO VI PHẠM</h3>
        <div class="card-text-container shadow-lg">
          <h4 class="card-text-title">
            {{type}} : {{name}}
          </h4>
          <p class="card-text-1">
            {{address}}
          </p>
          <hr>
          <p class="card-text-2">
            Kích thước:{{size.x}}m x {{size.y}}m <br>
            Số lượng: 1 trụ/bảng <br>
            Phân loại: {{category}} <br>
          </p>
        </div>

      </div>
    </div>
    <div class="sn-icon text-end">
      <a href="https://www.facebook.com/"><i class="fa-brands fa-facebook fa-xl"></i></a>
      <a href="https://www.whatsapp.com"><i class="fa-brands fa-whatsapp fa-xl"></i></a>
      <a href="https://www.web.telegram.org"></a><i class="fa-brands fa-telegram fa-xl"></i></i>
    </div>
  </section>
</main>


<script>
  // Lấy tham chiếu đến form và nút báo cáo
  const reportForm = document.getElementById('reportForm');
  const openButtonOutside = document.getElementById('open-button-outside');
  const imageInput = document.getElementById('imageInput');


  // Thêm sự kiện click vào nút báo cáo ngoài form
  openButtonOutside.addEventListener('click', function () {
    // Kiểm tra số lượng file đã chọn
    if (imageInput.files.length > 2) {
      alert('Chỉ được chọn tối đa 2 file.');
      event.preventDefault();

    } 
  });

</script>